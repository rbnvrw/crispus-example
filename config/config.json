{
    "site": {
		"title": "Crispus CMS",
		"theme": "crisp",
		"not_found_page": "404",
		"css_theme_folder": "css",
		"js_theme_folder": "js",
		"excerpt_length": 150,
		"menu": {
			"sort_order": "asc",
			"sort_by": "sorting"
		},
		"render_content_page_list": false
    },
	"twig": {
		"cache": false,
        "autoescape": false
	},
	"crispus": {
		"block_extension": "md",
		"paths": {
			"bin": "/bin",
			"cache": "/data/cache",
			"pages": "/pages",
			"controllers": "/controllers",
			"data": "/data",
			"lib": "/lib",
			"plugins": "/plugins",
			"themes": "/themes",
			"vendor": "/vendor"
		}
	},
	"munee": {
		"minify": true,
        "packer": true,
		"paths": {
			"bin": "/bin/munee.php"
		}
	}
}