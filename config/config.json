{
    "site": {
		"title": "Crispus CMS",
		"theme": "crisp",
		"not_found_page": "404",
		"excerpt_length": 150,
		"menu": {
			"sort_asc": true,
			"sort_by": "sorting"
		},
		"render_content_page_list": false,
		"assets": [ "css/*.css", "js/*.js" ]
    },
	"twig": {
		"cache": false,
        "autoescape": false,
        "debug": true
	},
	"crispus": {
		"block_extension": "md",
		"paths": {
			"cache": "/data/cache",
			"pages": "/pages",
			"data": "/data",
			"themes": "/themes",
			"vendor": "/vendor",
			"assets": "/assets"
		}
	}
}
